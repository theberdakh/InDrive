<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TextAppearances, text size dimensions-->
    <!--Only android:textSize/android:textColor/android:textStyle (bold, italc) /android:fontFamily /android:letterSpacing /android:lineSpacingMultiplier/ android:textAllCaps-->
    <style name="TextAppearance.InDrive.Text" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_interactive_control</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.InDrive.CroutonText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextAppearance.InDrive.Text.Title">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.InDrive.Text.TitleBody">
        <item name="android:textColor">@color/color_content_primary</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.InDrive.TitleSmall" parent="TextAppearance.InDrive.Text">
        <item name="android:textColor">@color/color_tertiary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextAppearance.InDrive.TitleGroup" parent="TextAppearance.InDrive.Text">
        <item name="android:textColor">@color/color_content_secondary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.InDrive.DisplaySmall" parent="TextAppearance.AppCompat.Display4">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_interactive_control</item>
    </style>

    <style name="TextAppearance.InDrive.BodyLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">#444547</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.InDrive.BodyLarge.Dark" parent="TextAppearance.InDrive.BodyLarge">
        <item name="android:textColor">@color/color_content_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance.InDrive.BodyLarge.SemiBold" parent="TextAppearance.InDrive.BodyLarge">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/color_brand_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.InDrive.PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.InDrive.PrimaryButton.Variant" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/color_content_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.InDrive.ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B70000</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.InDrive.Title.SubSection" parent="TextAppearance.InDrive.Text">
        <item name="android:textColor">#111315</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>


</resources>