<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/im_warning" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kútiw waqtı"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.InDrive.Text.Title"/>

    <TextView
        android:id="@+id/tv_time"
        android:padding="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Biypul kútiw waqtı 2 minut bolıp, bunnan keyingi hárbir minut ushın tólem 600 somdı quraydı."
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.InDrive.Text"/>


    <Button
        style="@style/Widget.InDrive.Button.Primary"
        android:id="@+id/btn_clear"
        android:text="Túsinikli"
        android:layout_margin="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>